@model Customer

<form asp-action="EditCustomer">
    <input hidden asp-for="@Model.CustomerId" />
    <div class="mb-3">
        <label asp-for="@Model.CustomerFirstName" class="form-label">Förnamn</label>
        <input asp-for="@Model.CustomerFirstName" class="form-control" id="firstName" />
        <span asp-validation-for="CustomerFirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.CustomerLastName" class="label-control">Efternamn</label>
        <input asp-for="@Model.CustomerLastName" class="form-control" placeholder="@Model.CustomerLastName"/>
        <span asp-validation-for="CustomerLastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.CustomerEmail" class="form-label">E-post</label>
        <input asp-for="@Model.CustomerEmail" class="form-control" id="email" />
        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Phone" class="form-label">Telefonnummer</label>
        <input asp-for="@Model.Phone" class="form-control" id="phone" />
        <span asp-validation-for="@Model.Phone" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Address" class="form-label">Adress</label>
        <input asp-for="@Model.Address" class="form-control" id="address" />
        <span asp-validation-for="@Model.Address" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ZipCode" class="form-label">Postnummer</label>
        <input asp-for="@Model.ZipCode" class="form-control" id="zipcode" />
        <span asp-validation-for="@Model.ZipCode" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.City" class="form-label">Stad</label>
        <input asp-for="@Model.City" class="form-control" id="city" />
        <span asp-validation-for="@Model.City" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Spara</button>
</form>