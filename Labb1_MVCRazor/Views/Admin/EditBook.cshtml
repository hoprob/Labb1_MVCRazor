@model Book

<div class="col-md-8 offset-md-2">
    <form asp-action="EditBook">
        <input hidden asp-for="@Model.BookId" />
        <div class="mb-3">
            <label asp-for="@Model.BookTitle" class="form-label">Titel</label>
            <input asp-for="@Model.BookTitle" class="form-control" />
            <span asp-validation-for="@Model.BookTitle" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.BookAuthor" class="label-control">Författare</label>
            <input asp-for="@Model.BookAuthor" class="form-control"/>
            <span asp-validation-for="@Model.BookAuthor" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.ISBN" class="form-label">ISBN</label>
            <input asp-for="@Model.ISBN" class="form-control" />
            <span asp-validation-for="@Model.ISBN" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.BookDescription" class="form-label">Beskrivning</label>
            <textarea asp-for="@Model.BookDescription" class="form-control"></textarea>
            <span asp-validation-for="@Model.BookDescription" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Spara</button>
    </form>
</div>
