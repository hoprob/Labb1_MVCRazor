@model AddBookViewModel

<div class="col-md-8 offset-md-2">
    <form asp-action="AddBook">
        <input hidden asp-for="@Model.Book.BookId" />
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="@Model.Book.BookTitle" class="form-label">Titel</label>
                    <input asp-for="@Model.Book.BookTitle" class="form-control" />
                    <span asp-validation-for="@Model.Book.BookTitle" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Book.BookAuthor" class="label-control">Författare</label>
                    <input asp-for="@Model.Book.BookAuthor" class="form-control" />
                    <span asp-validation-for="@Model.Book.BookAuthor" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Book.ISBN" class="form-label">ISBN</label>
                    <input asp-for="@Model.Book.ISBN" class="form-control" />
                    <span asp-validation-for="@Model.Book.ISBN" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-3">
                        <div id="bookImg">

                        </div>
                    </div>
                    <div class="col-md-9">
                        <label asp-for="@Model.Book.ImageURL" class="form-label">Bildlänk</label>
                        <input asp-for="@Model.Book.ImageURL" class="form-control" id="bookImgUrl" />
                        <span asp-validation-for="@Model.Book.ImageURL" class="text-danger"></span>
                        <button type="button" class="btn btn-primary mt-2" onclick="UpdateBookImage()">Uppdatera</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Book.BookDescription" class="form-label">Beskrivning</label>
            <textarea asp-for="@Model.Book.BookDescription" class="form-control"></textarea>
            <span asp-validation-for="@Model.Book.BookDescription" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="mb-3 col-md-2">
                <label asp-for="@Model.BookItemAmount" class="form-label">Antal Exemplar</label>
                <input type="number" asp-for="@Model.BookItemAmount" class="form-control" value="0" />
            </div>
            <div class="col-md-8  d-flex justify-content-end m-3 ">
                <button type="submit" class="btn btn-primary flex-fill">Spara</button>
            </div>
        </div>
    </form>
</div>
